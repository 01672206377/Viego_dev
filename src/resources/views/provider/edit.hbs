<div class="my-4">
    <h3>Chỉnh Sửa Dịch Vụ</h3>
</div>

<form action="/service/{{car._id}}/?_mothod=PUT" method="POST">
  <div class="form-group">
    <label for="brand">Brand</label>
    <input type="name" value="{{car.brand}}" name="brand" class="form-control" id="brand" >
  </div>
  <div class="form-group">
    <label for="model">model</label>
    <input type="text" value="{{car.model}}" name="model" class="form-control" id="model" >
  </div>
  <div class="form-group">
    <label for="mileage">mileage</label>
    <input type="text" value="{{car.mileage}}" name="mileage" class="form-control" id="mileage" >
  </div>
  <div class="form-group">
    <label for="status">status</label>
    <input type="text" value="{{car.status}}" name="status" class="form-control" id="status">
  </div>
  <div class="form-group">
    <label for="price">price</label>
    <input type="text" value="{{car.price}}" name="price" class="form-control" id="price" >
  </div>
  <div class="form-group">
    <label for="location">location</label>
    <input type="text" value="{{car.location}}" name="location" class="form-control" id="location" >
  </div>
  <button type="submit" class="btn btn-primary">Lưu những thay đổi</button>
</form>
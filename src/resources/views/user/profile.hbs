<form class="mt-5">
  <div class="mb-3">
    <label for="fullname" class="form-label">Full Name</label>
    <input type="text" class="form-control" id="fullname" value="{{user.fullname}}" name="fullname">
  </div>
  <div class="mb-3">
    <label for="phone" class="form-label">Phone</label>
    <input type="text" class="form-control" id="phone" value="{{user.phone}}" name="phone">
  </div>
  <div class="mb-3">
    <label for="location" class="form-label">Location</label>
    <input type="text" class="form-control" id="location" value="{{user.location}}" name="location">
  </div>
  {{#if user.dob}}
  <div class="mb-3">
    <label for="dob" class="form-label">Ngày sinh</label>
    <input type="text" class="form-control" id="dob" value="{{ formatTime user.dob}}" name="dob">
  </div>
  {{else}}
  <div class="mb-3">
    <label for="dob" class="form-label">Ngày sinh</label>
    <input type="date" class="form-control" id="dob" name="dob">
  </div>
  {{/if}}
  <img src="/uploads/{{user.avatar}}" alt="">
  <a href="/user/detail">Cập nhật thông tin</a>
</form>
<h2>UPATE USER</h2>

<form action="/admin/{{user._id}}?_method=PUT" method="POST">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="name" name="name" class="form-control" value="{{user.name}}" id="name" >
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" name="email" class="form-control" value="{{user.email}}" id="email" >
  </div>
  <div class="form-group">
    <label for="role">Role</label>
    <input type="text" name="role" class="form-control" value="{{user.role}}" id="role" >
  </div>
  <button type="submit" class="btn btn-primary">Lưu lại</button>
</form>